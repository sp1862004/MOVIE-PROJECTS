<body>
  <div class="col-6 mx-auto mt-5 mb-5 my-5 bg-light shadow">
    <form class="p-5" action="/api/user/login" method="post">
      <div class="mb-3 mt-4">
        <label for="exampleInputEmail1" class="form-label">Uaser Email :</label>
        <input type="email" class="form-control" aria-describedby="emailHelp" name="user_email">
      </div>
      <div class="mb-3 mt-4">
        <label for="exampleInputPassword1" class="form-label">Uaser Password :</label>
        <input type="password" class="form-control" name="user_password">
      </div>
      <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">Check me out</label>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
